{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="bg-red-100 text-red-700 p-2 rounded-lg" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <section class="flex justify-center items-center h-screen">
        <div class="bg-white p-8 rounded shadow-lg w-96 dark:bg-zinc-800">
            <h2 class="text-2xl font-bold mb-4">Register</h2>
            <div class="mb-4">
                {{ form_errors(registrationForm) }}
            </div>
            <div class="mb-4">
                {{ form_start(registrationForm) }}
            </div>
            <div class="mb-4">
                {{ form_row(registrationForm.email, {
                    'attr': {
                        'class': 'form-control w-full p-2 border rounded'}
                    }) }}
            </div>
            <div class="mb-4">
                {{ form_row(registrationForm.plainPassword, {
                     'label': 'Password', 
                     'attr': {'class':"form-control w-full p-2 border rounded"}
                }) }}
            </div>
            <div class="checkbox mb-3">
                <label class="flex items-center gap-2 cursor-pointer">
                    {{ form_widget(registrationForm.agreeTerms) }}
                    {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'cursor-pointer'}}) }}
                </label>

            </div>
        <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded w-full">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
